<div class="form_fields">
	<%= form_for @user, url: user_path(@user), method: :post do |f| %>

		<%= f.label :username %>
		<%= f.text_field :username %>
		<br>
		<%= f.label :password %>
		<%= f.password_field :password %>
		<br>
		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation %>
		<br>
		<%= f.submit 'Sign Up' %>
	<% end %>
</div>
